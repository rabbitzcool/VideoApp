@{
    ViewData["Title"] = "Video Catalogue";
}

<div class="container py-4">

    <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>

    <!-- Tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link"
                    id="catalogue-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#cataloguePane"
                    type="button"
                    role="tab"
                    aria-controls="cataloguePane"
                    aria-selected="false">
                Catalogue
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link active"
                    id="upload-tab"
                    data-bs-toggle="tab"
                    data-bs-target="#uploadPane"
                    type="button"
                    role="tab"
                    aria-controls="uploadPane"
                    aria-selected="true">
                Upload
            </button>
        </li>
    </ul>

    <div class="tab-content pt-3">
       <!-- Catalogue tab -->
        <div class="tab-pane fade" id="cataloguePane" role="tabpanel" aria-labelledby="catalogue-tab">

            <div class="mb-3">
                <div class="video-shell mx-auto">
                    <div class="ratio ratio-16x9">
                        <video id="videoPlayer" class="w-100 h-70" controls playsinline></video>
                    </div>
                </div>
            </div>

            <!-- Empty state the JS shows/hides via #emptyState -->
            <div id="emptyState" class="alert alert-info d-none">
                No videos yet. Upload some MP4 files to get started.
            </div>

            <div class="table-responsive">
                <table id="tblVideos" class="table table-striped table-hover d-none">
                    <thead>
                        <tr>
                            <th scope="col">File name</th>
                            <th scope="col">File size (KB)</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

        <!-- Upload tab -->
        <div class="tab-pane fade show active" id="uploadPane" role="tabpanel" aria-labelledby="upload-tab">
            <form class="border rounded p-3">
                <div class="mb-3">
                    <label for="fileInput" class="form-label">Choose MP4 files</label>
                    <input type="file"
                           id="fileInput"
                           name="files"
                           class="form-control"
                           accept=".mp4"
                           multiple />
                    <div class="form-text">Only MP4 files. Max 200MB per request (total of selected files).</div>
                </div>

                <button class="btn btn-primary" type="button" id="btnUpload">Upload</button>
                <span id="msg" class="ms-2"></span>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/home-index.js" asp-append-version="true"></script>
}
